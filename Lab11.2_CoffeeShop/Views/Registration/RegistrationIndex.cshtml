
@{
    ViewData["Title"] = "Registration Form";
}

<h1>Please fill the form to register!</h1>

<form action="/Registration/Registration" method="post"><br />
    First Name: <br /><input type="text" name="fname" maxlength="20" /><br /><br />

    Last Name: <br /><input type="text" name="lname" maxlength="20" /><br /><br />

    Email: <br /><input type="email" name="email" /><br /><br />

    Phone Number: <br /><input type="text" name="phone" maxlength="10" /><br /><br />

    Password: <br /><input type="password" name="password" /><br /><br />

    <input type="submit" value="Register" />
</form>